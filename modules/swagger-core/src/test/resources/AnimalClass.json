{
    "AnimalClass": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "type": {
                "type": "string"
            }
        },
        "discriminator" : {
            "propertyName" : "type",
            "mapping" : {
                "human" : "#/components/schemas/HumanClass",
                "pet" : "#/components/schemas/PetClass"
            }
        }
    },
    "HumanClass": {
        "type": "object",
        "allOf": [
            {
                "$ref": "#/components/schemas/AnimalClass"
            },
            {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    }
                }
            }
        ]
    },
    "PetClass": {
        "type": "object",
        "allOf": [
            {
                "$ref": "#/components/schemas/AnimalClass"
            },
            {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "The pet type"
                    },
                    "name": {
                        "type": "string",
                        "description": "The name of the pet"
                    },
                    "isDomestic": {
                        "type": "boolean"
                    }
                }
            }
        ],
        "required": [
            "isDomestic",
            "name",
            "type"
        ]
    }
}
